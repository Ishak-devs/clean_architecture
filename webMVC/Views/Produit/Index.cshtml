@model IEnumerable<Application.DTOs.ProduitDto>

@{

    ViewData["Title"] = "Liste des produits";

}

<div class="container mt-5">
    <h2 class="mb-4">Produits</h2>

    <a asp-action="Create" class="btn btn-primary mb-3">Ajouter un produit</a>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Nom</th>
                <th>Prix</th>
                <th>Stock</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var p in Model)

            {
                <tr>
                    <td>@p.Nom</td>
                    <td>@p.Prix €</td>
                    <td>@p.Stock</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-info">Détails</a>
                        <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning">Modifier</a>
                        <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">Supprimer</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>

