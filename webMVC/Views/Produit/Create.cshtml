@model Application.DTOs.ProduitDto


@{
    ViewData["Title"] = "Créer un produit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Créer un produit</h4>
                </div>

                <div class="card-body">

                    <form asp-action="Create" method="post">

                        <!-- Nom -->
                        <div class="mb-3">
                            <label asp-for="Nom" class="form-label fw-bold"></label>
                            <input asp-for="Nom" class="form-control" placeholder="Ex : Clavier mécanique" />


                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>

                        <!-- Prix (champ texte pour accepter les virgules) -->
                        <div class="mb-3">
                            <label asp-for="Prix" class="form-label fw-bold"></label>
                            <!--<input asp-for="Prix" class="form-control" type="text" placeholder="Ex : 49,99" />-->
                            <input asp-for="Prix" class="form-control" type="text" />

                            <span asp-validation-for="Prix" class="text-danger"></span>
                        </div>

                        <!-- Stock -->
                        <div class="mb-3">
                            <label asp-for="Stock" class="form-label fw-bold"></label>
                            <input asp-for="Stock" class="form-control" type="number" min="0" placeholder="Ex : 25" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>

                        <!-- Erreurs globales -->
                        @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""] != null)
                        {
                            <div class="alert alert-danger">
                                @ViewData.ModelState[""].Errors.First().ErrorMessage
                            </div>
                        }

                        <button type="submit" class="btn btn-success w-100">Créer</button>

                        <div class="mt-3 text-center">
                            <a asp-action="Index" class="text-decoration-none">Retour à la liste</a>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}